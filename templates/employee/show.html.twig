{% extends 'base_back.html.twig' %}

{% block title %}Empleado{% endblock %}

{% block body %}
    <h1 class="font-lm-titlt my-3">Empleado</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ employee.lastname }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="my-3">
        <a href="{{ path('app_employee_index') }}" class="btn btn-primary">Volver</a>
        <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-success">Editar</a>
    </div>

    {#{{ include('employee/_delete_form.html.twig') }}#}
{% endblock %}
