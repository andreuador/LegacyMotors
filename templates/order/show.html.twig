{% extends 'base_back.html.twig' %}

{% block title %}Comanda{% endblock %}

{% block body %}
    <h1 class="font-lm-title my-3">Comanda</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ order.customer.name }}</td>
            </tr>
            <tr>
                <th>Vehicle</th>
                <td>
                    {% for vehicle in order.vehicles %}
                        {{ vehicle.brand.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Factura</th>
                <td>{{ order.invoice.number }}</td>
            </tr>
            <tr>
                <th>Estat</th>
                <td>{{ order.state }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="my-3">
        <a href="{{ path('app_order_index') }}" class="btn btn-primary">Tornar</a>

        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-success">Editar</a>
    </div>

    {# {{ include('order/_delete_form.html.twig') }} #}
{% endblock %}
