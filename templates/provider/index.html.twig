{% extends 'base_back.html.twig' %}

{% block title %}Provider index{% endblock %}

{% block body %}
    <h1>Provider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Dni</th>
                <th>Cif</th>
                <th>Address</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provider in providers %}
            <tr>
                <td>{{ provider.id }}</td>
                <td>{{ provider.name }}</td>
                <td>{{ provider.email }}</td>
                <td>{{ provider.dni }}</td>
                <td>{{ provider.cif }}</td>
                <td>{{ provider.address }}</td>
                <td>{{ provider.phone }}</td>
                <td>{{ provider.isDeleted }}</td>
                <td>
                    <a href="{{ path('app_provider_show', {'id': provider.id}) }}">show</a>
                    <a href="{{ path('app_provider_edit', {'id': provider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center mt-3 mb-3">
        {{ knp_pagination_render(pagination) }}
    </div>

    <a href="{{ path('app_provider_new') }}">Create new</a>
{% endblock %}
