{% extends 'base_back.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
    <h1>Vehicle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Plate</th>
                <td>{{ vehicle.plate }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ vehicle.fuel }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ vehicle.color }}</td>
            </tr>
            <tr>
                <th>Price_per_day</th>
                <td>{{ vehicle.pricePerDay }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ vehicle.available ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Doors</th>
                <td>{{ vehicle.doors }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ vehicle.capacity }}</td>
            </tr>
            <tr>
                <th>Transmission</th>
                <td>{{ vehicle.transmission }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vehicle.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ vehicle.category }}</td>
            </tr>
            <tr>
                <th>IsDeleted</th>
                <td>{{ vehicle.isDeleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_vehicle_index') }}">back to list</a>

    <a href="{{ path('app_admin_vehicle_edit', {'id': vehicle.id}) }}">edit</a>

    {{ include('vehicle/_delete_form.html.twig') }}
{% endblock %}
