{% extends 'base_back.html.twig' %}

{% block title %}Vehicle index{% endblock %}

{% block body %}
    <h1 class="font-lm-title my-3">Vehicles</h1>

    <div class="row g-3 align-items-center">
        <form method="get" role="search" class="col-4">
            <div class="input-group input-group-sm">
                <input type="search" class="form-control form-control-sm" placeholder="Matrícula, combustible, color..."
                       name="q"
                       aria-label="Matrícula, combustible, color..." aria-describedby="basic-addon1">
                <span class="input-group-text" id="basic-addon1"><button type="submit" class="btn btn-sm"><i
                                class="bi bi-search"></i></button></span>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <div class="d-flex justify-content-md-end m-3">
            <a href="{{ path('app_vehicle_new') }}" class="btn btn-success">Crear</a>
        </div>
        <table class="table table-striped table-hover border border-1 d-lg-table d-none shadow text-center">
            <thead>
            <tr>
                <th class="d-none">Id</th>
                <th class="bg-quaternary-lm">Marca</th>
                <th class="bg-quaternary-lm">Model</th>
                <th class="bg-quaternary-lm">Matricula</th>
                <th class="bg-quaternary-lm">Carburant</th>
                <th class="bg-quaternary-lm">Color</th>
                <th class="bg-quaternary-lm">Preu</th>
                <th class="bg-quaternary-lm">Disponible</th>
                <th class="bg-quaternary-lm">Portes</th>
                <th class="bg-quaternary-lm">Capacitat</th>
                <th class="bg-quaternary-lm">Transmissió</th>
                <th class="bg-quaternary-lm">Descripció</th>
                <th class="d-none">Categoria</th>
                <th class="d-none">IsDeleted</th>
                <th class="bg-quaternary-lm">Accions</th>
            </tr>
            </thead>
            <tbody>
            {% for vehicle in vehicles %}
                <tr>
                    <td class="d-none">{{ vehicle.id }}</td>
                    <td data-title="Marca">{{ vehicle.brand.name }}</td>
                    <td data-title="Model">
                        {% for model in vehicle.brand.models %}
                            {{ model.name }}
                        {% endfor %}
                    </td>
                    <td data-title="Matricula">{{ vehicle.plate }}</td>
                    <td data-title="Carburant">{{ vehicle.fuel }}</td>
                    <td data-title="Color">{{ vehicle.color }}</td>
                    <td data-title="Preu">{{ vehicle.pricePerDay }} €</td>
                    <td data-title="Disponible">{{ vehicle.available ? 'Si' : 'No' }}</td>
                    <td data-title="Portes">{{ vehicle.doors }}</td>
                    <td data-title="Capacitat">{{ vehicle.capacity }}</td>
                    <td data-title="Transmissió">{{ vehicle.transmission }}</td>
                    <td data-title="Descripció">{{ vehicle.description }}</td>
                    <td class="d-none">{{ vehicle.category }}</td>
                    <td class="d-none">{{ vehicle.isDeleted ? 'Si' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}"
                           class="btn btn-primary"><i class="bi bi-eye-fill"></i></a>
                        <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}"
                           class="btn btn-secondary"><i class="bi bi-pencil-fill"></i></a>
                        <a href="#"
                           class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="13">No es troben resultats</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Versió per al mòbil -->

    <div class="accordion accordion-flush d-lg-none text-center" id="accordionFlushExample">
        {% for vehicle in vehicles %}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button bg-tertiary-lm" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse{{ vehicle.id }}" aria-expanded="true"
                            aria-controls="collapse{{ vehicle.id }}">
                        {{ vehicle.brand.name }}
                        <span class="mx-1">
                            {% for model in vehicle.brand.models %}
                                {{ model.name }}
                            {% endfor %}
                        </span>
                    </button>
                </h2>
                <div id="collapse{{ vehicle.id }}" class="accordion-collapse collapse"
                     data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body d-flex flex-wrap bg-quaternary-lm">
                        <!--                        <div class="flex-grow-1">
                            <h3>Marca</h3>
                            <p>{{ vehicle.brand.name }}</p>
                        </div>
                        <div class="flex-grow-1">
                            <h3>Model</h3>
                            <p>
                                {% for model in vehicle.brand.models %}
                                    {{ model.name }}
                                {% endfor %}
                            </p>
                        </div>-->
                        <div class="flex-grow-1">
                            <h5>Matrícula</h5>
                            <p>{{ vehicle.plate }}</p>
                        </div>
                        <div class="flex-grow-1">
                            <h5>Preu</h5>
                            <p>{{ vehicle.pricePerDay }} €</p>
                        </div>
                        <div class="flex-grow-1">
                            <h5>Disponible</h5>
                            <p>{{ vehicle.available ? 'Si' : 'No' }}</p>
                        </div>
                        <div class="flex-grow-1">
                            <h5>Accions</h5>
                            <a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}"
                               class="btn btn-primary"><i class="bi bi-eye-fill"></i></a>
                            <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}"
                               class="btn btn-secondary"><i class="bi bi-pencil-fill"></i></a>
                            <a href="#"
                               class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center my-2">
            <li class="page-item {% if pagination.currentPageNumber == 1 %}disabled{% endif %}">
                <a class="page-link"
                   href="{% if pagination.currentPageNumber > 1 %}{{ path('app_vehicle_index', {'page': pagination.currentPageNumber - 1}) }}{% endif %}"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for page in 1..pagination.pageCount %}
                <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                    <a class="page-link" href="{{ path('app_vehicle_index', {'page': page}) }}">{{ page }}</a>
                </li>
            {% endfor %}
            <li class="page-item {% if pagination.currentPageNumber == pagination.pageCount %}disabled{% endif %}">
                <a class="page-link"
                   href="{% if pagination.currentPageNumber < pagination.pageCount %}{{ path('app_vehicle_index', {'page': pagination.currentPageNumber + 1}) }}{% endif %}"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}
