{% extends 'base.html.twig' %}

{% block title %}Inici de sessió{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 my-5 d-flex justify-content-center">
                <div class="border border-black border-opacity-25 p-3 rounded-2 d-flex flex-column align-items-center">
                    <h2>Inici de sessió</h2>
                    <form method="post" action="{{ path('app_login') }}">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Usuari"
                                   name="_username">
                            <label for="username">Usuari</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="floatingInput" placeholder="Contrasenya"
                                   name="_password">
                            <label for="password">Contrasenya</label>
                        </div>
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <button class="btn btn-primary mt-3" type="submit">Iniciar sessió</button>
                    </form>
                    <p class="pt-3"><a href="" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="">Registra't ací</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content" data-controller="customer-register">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Registre</h1>
                    <div class="modal-body">
                        <div {{ vue_component('RegisterCustomer_component') }}></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
